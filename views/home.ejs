<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogg.</title>
    <link rel="stylesheet" href="/styles/style.css" />
    <style></style>
  </head>
  <body>
    <!-- || Navbar -->
    <section id="first-page">
      <div id="nav">
        <div id="logo">
          <img src="/images/logo.svg" alt="Blogg." />
        </div>
        <div id="navbar">
          <div id="home"><a href="/">home</a></div>
          <div id="about"><a href="/about">about</a></div>
          <div id="post"><a href="/post">post</a></div>
        </div>
      </div>

      <div id="main">
        <h1 class="hero">Blogg.</h1>
      </div>
    </section>

    <!-- || Animation section -->
    <section id="second-page">
      <h2>journals</h2>
    </section>

    <!-- || View section -->
    <section class="third-page">
      <div class="third-page-container">
        <div class="view-title">
          <h2>
            <% if(locals.title){%> <%= title %> <%}else{%> Blog Title <%}%>
          </h2>
        </div>
        <div class="view-body">
          <h3>
            <% if(locals.body){%> <%= body %> <%}else{%> Lorem ipsum dolor sit,
            amet consectetur adipisicing elit. Nobis quod repellat repudiandae
            repellendus. Nesciunt quam tenetur fuga nemo sunt perspiciatis!
            <%}%>
          </h3>
        </div>
        <div class="user-control">
          <div class="view-author">
            <h2>
              Author:
              <span class="view-author-name">
                <% if(locals.author){%>
                   <%= author %>
                    <%}else{%>
                       Ankit kumar sahu
                      <%}%>
              </span>
            </h2>
          </div>
          <div class="edit-btn">
            <a href="/edit">edit</a>
          </div>
        </div>
      </div>
    </section>
    


    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
      integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"
      integrity="sha512-onMTRKJBKz8M1TnqqDuGBlowlH0ohFzMXYRNebz+yOcc5TQr/zAKsthzhuv0hiyUKEiQEQXEynnXCvNTOk50dg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/scripts/script.js"></script>
  </body>
</html>
